{
	// #region Dotfiles repo settings

	"files.exclude": {
		"cs/**/.vs/": true,
		"cs/**/obj/": true,
		"cs/**/bin/": true,
		"cs/.published/": true,
	},

	// #endregion

	// #region Dotfiles user settings

	// Window/workbench
	"workbench.layoutControl.enabled": false,
	"workbench.editor.wrapTabs": true,
	"workbench.editor.pinnedTabsOnSeparateRow": true,
	"workbench.editor.languageDetection": false,
	"window.density.editorTabHeight": "compact",
	"window.commandCenter": false,
	"window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${activeRepositoryBranchName}",
	"window.zoomLevel": -0.5,
	"workbench.sideBar.location": "right",
	"workbench.activityBar.location": "top",
	"workbench.reduceMotion": "on",
	"workbench.localHistory.enabled": false,
	"workbench.editor.empty.hint": "hidden",
	"breadcrumbs.enabled": false,
	"workbench.startupEditor": "none",
	"workbench.editor.enablePreview": false,

	// Colour
	"window.autoDetectColorScheme": true,

	// File Tree
	"workbench.tree.indent": 18,
	"workbench.tree.enableStickyScroll": true,

	// Editor
	"editor.renderWhitespace": "all",
	"editor.insertSpaces": false,
	"editor.dragAndDrop": false,
	"editor.rulers": [100],
	"editor.fontFamily": "'Cascadia Code', 'Consolas', monospace",
	"editor.codeLens": false,
	"editor.stickyScroll.enabled": false,
	"editor.renderLineHighlight": "all",

	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.associations": {
		"*.json": "jsonc",
	},

	// Minimap
	"editor.minimap.renderCharacters": false,
	"editor.minimap.showSlider": "always",

	// Remote
	"remote.autoForwardPorts": false,
	"remote.forwardOnOpen": false,

	// Colour highlight extension
	"color-highlight.markRuler": false,

	// Redhat extensions (XML)
	"redhat.telemetry.enabled": false,

	// Try to hide the AI rubbish
	"chat.agent.enabled": false,
	"chat.mcp.access": "none",
	"chat.commandCenter.enabled": false,
	"chat.promptFiles": false,
	"chat.extensionTools.enabled": false,
	"chat.edits2.enabled": false,
	"chat.detectParticipant.enabled": false,
	"chat.disableAIFeatures": true,

	// #endregion
}
